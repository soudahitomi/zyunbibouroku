<div class="container">
  <div class="row">

    <div class="col-2">
        <%= render 'public/users/info' %>
    </div><!--col-2-->

    <div class="col-6 ">

      <div class="jscroll">

        <% if @model == 'user' %>
          <h3>"<%= @word %>" が含まれるユーザー検索結果 </h3>
          <%= render 'public/users/index',users: @records %>
        <% elsif @model == 'post' %>
          <h3> "<%= @word %>"が含まれる投稿検索結果</h3>
          <%= render 'public/posts/index', posts: @records %>
        <% else @model == 'list' %>
          <h3>"<%= @word %>"が含まれる投稿内リストの検索結果</h3>
          <%= render 'public/lists/index', lists: @records %>
        <% end %>

      </div><!--jscroll-->
    </div><!--col-6-->

    <div class="col-4">
      <%= render 'public/posts/user_post_index', posts: @posts %>
    </div><!--col-4-->

  </div><!--row-->
</div><!--container-->