<div class="container">
  <div class="row">
    <div class="mx-auto">

      <%= render 'posts_error_messages', post: @post %>

      <h1 class="mb-5">投稿</h1>
      <%= form_with model: @post, local: true do |f| %>

        <h3>タイトル</h3>
        <%= f.text_field :title, placeholder: "例）やること" %>

        <h3 class="mt-3">投稿内リスト</h3>

          <div>
            <%= f.fields_for :lists do |t| %>
              <% render 'list_fields', f: t %>
            <% end %>
            <div>
              <%= link_to_add_association f, :lists do %>
              <i class="fa-solid fa-square-plus"></i>
            <% end %>
            </div>
          </div>

          <%= f.submit "投稿する", class: "btn btn-outline-success btn-sm rounded-pill mt-2" %>

      <% end %>

    </div><!--mx-auto-->
  </div><!--row-->
</div><!--container-->
