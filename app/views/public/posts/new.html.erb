<div class="container">
  <div class="row">
    <div class="mx-auto">

      <h1 class="mb-5">投稿</h1>
      <%= form_with model: @post, local: true do |f| %>

        <h3>投稿タイトル</h3>
        <%= f.text_field :title, placeholder: "例）やること" %>

        <div>
          <h3 class="mt-3">投稿内リスト</h3>
            <%= f.fields_for :lists do |t| %>
              <% render 'list_fields', f: t %>
            <% end %>

            <%= link_to_add_association f, :lists do %>
              <i class="fa-solid fa-square-plus"></i>
            <% end %>
        </div>

          <%= f.submit "投稿"%>

      <% end %>
    </div><!--mx-autoの閉じタグ-->
  </div><!--rowの閉じタグ-->
</div><!--container閉じタグ-->
