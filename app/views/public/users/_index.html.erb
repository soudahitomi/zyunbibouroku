<% users.each do |user| %>
  <%= link_to user_path(user.id), class: "text-dark" do %>

    <div class="card mt-3 mb-3 shadow-sm bg-white rounded">
      <div class="card-body">
        <div class="row">

          <div class="col-2">
            <%= image_tag user.get_profile_image(50,50) %>
          </div>

          <div class="col-10">
            <div class="row">

              <div class="col-6">
                <%= user.name %>
              </div>

              <div class="col-6">
                フォロー <%= user.followings.count %>
                フォロワー <%= user.followers.count %>
              </div>

            </div><!--row-->
          </div><!--col-10-->
        </div><!--row-->
      </div><!--card-body-->
    </div><!--card-->
  <% end %>
<% end %>