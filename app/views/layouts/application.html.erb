<!DOCTYPE html>
<html>
  <head>
    <title>準備忘録</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/67d14ad52e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%= render "searches/form" %>
      <% if user_signed_in? %>
        <%= link_to posts_path do %>
          <img src="/assets/logo.jpg" width="100" height="100" alt="">
        <% end %>
      <% unless %>
        <%= link_to root_path do %>
          <img src="/assets/logo.jpg" alt="">
        <% end %>
      <% end %>
    </header>

    <main>
      <% if user_signed_in? %>
        <%= link_to "投稿", new_post_path %>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <%= current_user.name %>

          <% unless current_user.guest_user? %>
            <li>
              <%= link_to "編集", edit_user_path(current_user.id) %>
            </li>
          <% end %>

        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>

      <% else %>
        <li>
          <%= link_to "新規登録", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
        <li>
          <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>
        </li>
          <% end %>
        <% end %>
      <%= yield %>
    </main>
  </body>
</html>
